@page "/"

<PageTitle>Index</PageTitle>

<h1>@value</h1>

<EditForm method="POST" Model="value">
    <InputText Name="value" @bind-Value="value" />
    <input type="submit" value="Send" />
</EditForm>

@if (_submitted)
{
    <p>Submited.</p>
}

@code{
    [SupplyParameterFromForm] string value { get; set; } = "Hello, world!";

    bool _submitted = false;
    public void Submit()
    {
        _submitted = true;
    }
}
